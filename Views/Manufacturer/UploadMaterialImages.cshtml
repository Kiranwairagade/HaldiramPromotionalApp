@model HaldiramPromotionalApp.ViewModels.MaterialImageViewModel
@using HaldiramPromotionalApp.Models

@{
    ViewData["Title"] = "Upload Material Image";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Upload Form Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="bg-indigo-600 px-4 py-3">
                <h2 class="text-lg font-semibold text-white">Upload Material Image</h2>
            </div>
            <div class="p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="rounded-md bg-green-50 p-3 mb-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-4 w-4 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-2">
                                <p class="text-xs font-medium text-green-800">
                                    @TempData["SuccessMessage"]
                                </p>
                            </div>
                            <div class="ml-auto pl-2">
                                <div class="-mx-1 -my-1">
                                    <button type="button" class="inline-flex bg-green-50 rounded-md p-1 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-offset-green-50 focus:ring-green-600">
                                        <span class="sr-only">Dismiss</span>
                                        <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="rounded-md bg-red-50 p-3 mb-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-4 w-4 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-2">
                                <p class="text-xs font-medium text-red-800">
                                    @TempData["ErrorMessage"]
                                </p>
                            </div>
                        </div>
                    </div>
                }

                @{
                    var materials = ViewBag.Materials as SelectList ?? new SelectList(new List<SelectListItem>());
                }
                
                @if (materials.Any())
                {
                    <form asp-controller="MaterialImages" asp-action="Upload" enctype="multipart/form-data" method="post" class="space-y-4">
                        @Html.AntiForgeryToken()
                        
                        <div>
                            <label class="block text-xs font-medium text-gray-700 mb-1">Materials</label>
                            <div class="mb-2">
                                <input type="text" id="materialSearch" placeholder="Search materials..." class="w-full px-3 py-2 text-xs border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500">
                            </div>
                            <div class="border border-gray-300 rounded-md p-3 max-h-60 overflow-y-auto" id="materialsContainer">
                                @foreach (var item in materials)
                                {
                                    <div class="flex items-center mb-2 material-item" data-name="@item.Text.ToLower()">
                                        <input type="checkbox" id="material_@item.Value" name="MaterialMasterIds" value="@item.Value" class="h-4 w-4 text-indigo-600 border-gray-300 rounded">
                                        <label for="material_@item.Value" class="ml-2 block text-xs text-gray-700">
                                            @item.Text
                                        </label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="MaterialMasterIds" class="text-red-500 text-xs"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ImageFile" class="block text-xs font-medium text-gray-700 mb-1">Material Image</label>
                            <div class="mt-1 flex justify-center px-4 pt-3 pb-4 border border-gray-300 border-dashed rounded-md">
                                <div class="space-y-1 text-center">
                                    <svg class="mx-auto h-8 w-8 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                    <div class="flex text-xs text-gray-600">
                                        <label class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-1 focus-within:ring-offset-1 focus-within:ring-indigo-500" id="materialUploadLabel">
                                            <span>Upload a file</span>
                                            <input asp-for="ImageFile" id="MaterialImageFile" type="file" class="sr-only" accept=".jpg,.jpeg,.png,.gif" />
                                        </label>
                                        <p class="pl-1">or drag and drop</p>
                                    </div>
                                    <!-- Preview -->
                                    <div id="materialPreviewContainer" class="mt-2 hidden">
                                        <img id="materialPreview" src="" alt="Material preview" class="h-24 w-auto object-cover rounded-md border" />
                                    </div>
                                    <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                                </div>
                            </div>
                            <span asp-validation-for="ImageFile" class="text-red-500 text-xs"></span>
                        </div>
                        
                        <div class="flex justify-end space-x-2">
                            <button type="submit" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-indigo-500">
                                <svg class="-ml-0.5 mr-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                Upload Image
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="text-center py-6">
                        <svg class="mx-auto h-8 w-8 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <h3 class="mt-1 text-xs font-medium text-gray-900">All materials have images</h3>
                        <p class="mt-1 text-xs text-gray-500">No materials available for image upload. Delete existing images to upload new ones.</p>
                    </div>
                }
            </div>
        </div>
        
        <!-- Uploaded Material Images Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="bg-green-600 px-4 py-3">
                <h2 class="text-lg font-semibold text-white">Uploaded Material Images</h2>
            </div>
            <div class="p-4 max-h-96 overflow-y-auto">
                @{
                    var materialImages = ViewBag.MaterialImages as List<MaterialImage> ?? new List<MaterialImage>();
                }
                
                @if (materialImages.Any())
                {
                    <div class="grid grid-cols-1 gap-3">
                        @foreach (var materialImage in materialImages)
                        {
                            <div class="border border-gray-200 rounded-md overflow-hidden hover:shadow-sm transition-shadow duration-150">
                                <div class="flex flex-col sm:flex-row">
                                    <div class="sm:w-1/3">
                                        <img src="@materialImage.ImagePath" alt="Material Image" class="h-24 w-full object-cover">
                                    </div>
                                    <div class="sm:w-2/3 p-2">
                                        <h3 class="text-xs font-medium text-gray-900 truncate">@materialImage.MaterialMaster?.Materialname</h3>
                                        <p class="text-xs text-gray-500 mt-1">@materialImage.MaterialMaster?.ShortName</p>
                                        <div class="mt-1 text-xs text-gray-500">
                                            <p><span class="font-medium">Uploaded:</span> @materialImage.CreatedAt.ToString("dd/MM/yyyy")</p>
                                        </div>
                                        <div class="mt-2 flex justify-end">
                                            <!-- Using a form for delete to ensureAntiForgeryToken works -->
                                            <form asp-action="Delete" asp-controller="MaterialImages" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@materialImage.Id" />
                                                <button type="submit" class="inline-flex items-center px-1.5 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-red-500" 
                                                        onclick="return confirm('Are you sure you want to delete this material image?');">
                                                    <svg class="-ml-0.5 mr-0.5 h-2.5 w-2.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                    </svg>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-6">
                        <svg class="mx-auto h-8 w-8 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <h3 class="mt-1 text-xs font-medium text-gray-900">No material images uploaded</h3>
                        <p class="mt-1 text-xs text-gray-500">Get started by uploading a new material image.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Add select all functionality if needed
        document.addEventListener('DOMContentLoaded', function() {
            // You can add JavaScript for select all/deselect all functionality here if needed

            // Material search functionality
            const searchInput = document.getElementById('materialSearch');
            const materialItems = document.querySelectorAll('.material-item');

            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase().trim();

                    materialItems.forEach(item => {
                        const materialName = item.getAttribute('data-name');
                        if (materialName.includes(searchTerm)) {
                            item.style.display = '';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            }

            // Material image preview
            const fileInput = document.getElementById('MaterialImageFile');
            const previewContainer = document.getElementById('materialPreviewContainer');
            const previewImg = document.getElementById('materialPreview');
            let currentObjectUrl = null;

            function clearPreview() {
                if (currentObjectUrl) {
                    URL.revokeObjectURL(currentObjectUrl);
                    currentObjectUrl = null;
                }
                if (previewImg) previewImg.src = '';
                if (previewContainer) previewContainer.classList.add('hidden');
            }

            if (fileInput && previewImg && previewContainer) {
                fileInput.addEventListener('change', function () {
                    const file = this.files && this.files[0];
                    if (!file) {
                        clearPreview();
                        return;
                    }

                    if (!file.type.startsWith('image/')) {
                        clearPreview();
                        return;
                    }

                    if (currentObjectUrl) URL.revokeObjectURL(currentObjectUrl);
                    currentObjectUrl = URL.createObjectURL(file);
                    previewImg.src = currentObjectUrl;
                    previewContainer.classList.remove('hidden');
                });
            }

            // Ensure clicking the visible upload label opens file picker (robust fallback)
            const uploadLabel = document.getElementById('materialUploadLabel');
            if (uploadLabel && fileInput) {
                uploadLabel.addEventListener('click', function (e) {
                    // If click didn't originate from the actual input, trigger click programmatically
                    if (e.target !== fileInput) {
                        e.preventDefault();
                        fileInput.click();
                    }
                });
            }
        });
    </script>
}