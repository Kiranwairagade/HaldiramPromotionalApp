@model HaldiramPromotionalApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-md shadow-sm overflow-hidden">
        <div class="px-4 py-3 sm:px-5 border-b border-gray-200">
            <h3 class="text-base leading-5 font-medium text-gray-900">Product Details</h3>
            <p class="mt-1 text-xs text-gray-500">Details for @Model.ProductName</p>
        </div>
        <div class="px-4 py-4 sm:p-5">
            <dl class="grid grid-cols-1 gap-x-3 gap-y-4 sm:grid-cols-2">
                <div class="sm:col-span-1">
                    <dt class="text-xs font-medium text-gray-500">Product Name</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.ProductName)</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-xs font-medium text-gray-500">Price</dt>
                    <dd class="mt-1 text-sm text-gray-900">â‚¹@Html.DisplayFor(model => model.Price)</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-xs font-medium text-gray-500">Category</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Category)</dd>
                </div>
                <div class="sm:col-span-2">
                    <dt class="text-xs font-medium text-gray-500">Description</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Description)</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-xs font-medium text-gray-500">Status</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @if (Model.IsActive)
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                Inactive
                            </span>
                        }
                    </dd>
                </div>
            </dl>
        </div>
        <div class="px-4 py-3 bg-gray-50 sm:px-5 flex justify-end space-x-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex justify-center py-1.5 px-3 border border-transparent shadow-sm text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-blue-500">
                Edit
            </a>
            <a asp-action="Index" class="inline-flex justify-center py-1.5 px-3 border border-gray-300 shadow-sm text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-blue-500">
                Back to List
            </a>
        </div>
    </div>
</div>