@model IEnumerable<HaldiramPromotionalApp.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-xl font-bold text-gray-900">Manage Products</h1>
        <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-1.5 px-3 rounded-md text-sm">
            Add New Product
        </a>
    </div>

    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
        <div class="max-h-[calc(100vh-200px)] overflow-y-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50 sticky top-0">
                    <tr>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Product Name
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Category
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Price
                        </th>
                        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-2 whitespace-nowrap text-xs font-medium text-gray-900">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-500">
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-500">
                                    â‚¹@Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-500">
                                    @if (item.IsActive)
                                    {
                                        <span class="px-1.5 inline-flex text-xs leading-4 font-semibold rounded-full bg-green-100 text-green-800">
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-1.5 inline-flex text-xs leading-4 font-semibold rounded-full bg-red-100 text-red-800">
                                            Inactive
                                        </span>
                                    }
                                </td>
                                <td class="px-4 py-2 whitespace-nowrap text-right text-xs font-medium">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-2">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-600 hover:text-gray-900 mr-2">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-4 py-3 text-center text-xs text-gray-500">
                                No products found. <a asp-action="Create" class="text-blue-600 hover:text-blue-900">Create the first product</a>.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>