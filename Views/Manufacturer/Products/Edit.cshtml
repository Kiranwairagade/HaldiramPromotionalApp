@model HaldiramPromotionalApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Edit Product</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Update the product details.</p>
        </div>
        <div class="px-4 py-5 sm:p-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        <label asp-for="ProductName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="ProductName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="ProductName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Price" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Category" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Category" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <textarea asp-for="Description" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center">
                        <div class="flex items-center h-5">
                            <input asp-for="IsActive" class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" />
                        </div>
                        <div class="ml-3 text-sm">
                            <label asp-for="IsActive" class="font-medium text-gray-700"></label>
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex items-center justify-end space-x-3">
                    <a asp-action="Index" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}