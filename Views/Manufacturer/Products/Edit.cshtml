@model HaldiramPromotionalApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-md shadow-sm overflow-hidden">
        <div class="px-4 py-3 sm:px-5 border-b border-gray-200">
            <h3 class="text-base leading-5 font-medium text-gray-900">Edit Product</h3>
            <p class="mt-1 text-xs text-gray-500">Update the product details.</p>
        </div>
        <div class="px-4 py-4 sm:p-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs mb-3"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <div>
                        <label asp-for="ProductName" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="ProductName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-1.5 px-2.5 text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="ProductName" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Price" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Price" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-1.5 px-2.5 text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Price" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Category" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Category" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-1.5 px-2.5 text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Category" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Description" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <textarea asp-for="Description" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-1.5 px-2.5 text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="flex items-center">
                        <div class="flex items-center h-4">
                            <input asp-for="IsActive" class="focus:ring-blue-500 h-3.5 w-3.5 text-blue-600 border-gray-300 rounded" />
                        </div>
                        <div class="ml-2 text-xs">
                            <label asp-for="IsActive" class="font-medium text-gray-700"></label>
                        </div>
                    </div>
                </div>

                <div class="mt-5 flex items-center justify-end space-x-2">
                    <a asp-action="Index" class="py-1.5 px-3 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex justify-center py-1.5 px-3 border border-transparent shadow-sm text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-blue-500">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}