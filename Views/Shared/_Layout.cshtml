﻿﻿﻿﻿﻿﻿﻿﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haldiram Promotional Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/DealerDashboard.css" />
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-indigo-600">Haldiram Promotional</a>
                    </div>
                    <nav class="ml-6 flex space-x-4 hidden sm:flex items-center">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            var userRole = Context.Session.GetString("role");
                            if (userRole == "Dealer")
                            {
                                <a asp-area="" asp-controller="Home" asp-action="DealerHome" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Dealer Dashboard
                                </a>
                            }
                            else if (userRole == "Admin")
                            {
                                <a asp-area="" asp-controller="Home" asp-action="AdminDashboard" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Admin Dashboard
                                </a>
                                <a asp-area="" asp-controller="Campaigns" asp-action="CreateCampaign" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Create Campaign
                                </a>
                                <a asp-area="" asp-controller="Campaigns" asp-action="ViewCampaigns" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    View Campaigns
                                </a>
                                <a asp-area="" asp-controller="Posters" asp-action="Upload" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Upload Poster
                                </a>
                                <a asp-area="" asp-controller="MaterialImages" asp-action="Upload" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Material Images
                                </a>
                                <a asp-area="" asp-controller="Products" asp-action="Index" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Products
                                </a>
                            }
                            else if (userRole == "Shopkeeper")
                            {
                                <a asp-area="" asp-controller="Home" asp-action="ShopkeeperHome" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                    Shopkeeper Dashboard
                                </a>
                            }
                        }
                    </nav>
                </div>
                <!-- User info and logout -->
                <div class="flex items-center">
                    @if (Context.Session.GetString("UserName") != null)
                    {
                        <div class="flex items-center space-x-4">
                            @if (Context.Session.GetString("role") == "Dealer")
                            {
                                <!-- Notification Icon -->
                                <div class="relative" id="notificationContainer">
                                    <button id="notificationBell" class="text-gray-700 hover:text-indigo-600 relative p-1">
                                        <i class="fas fa-bell fa-lg"></i>
                                        <span id="notificationCount" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center" style="display: none;">0</span>
                                    </button>
                                    <!-- Notification Dropdown -->
                                    <div id="notificationDropdown" class="absolute right-0 mt-2 w-80 bg-white rounded-md shadow-lg py-1 z-50 hidden" style="border: 1px solid #e5e7eb; max-height: 400px; overflow-y: auto;">
                                        <div class="px-4 py-2 border-b border-gray-200">
                                            <h3 class="text-sm font-medium text-gray-900">Notifications</h3>
                                        </div>
                                        <div id="notificationList" class="divide-y divide-gray-100">
                                            <!-- Notifications will be populated here -->
                                            <div class="px-4 py-3 text-center text-gray-500 text-xs">Loading notifications...</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Display total points for dealers -->
                                <span class="text-gray-700 text-sm bg-yellow-100 px-2 py-1 rounded-full">
                                    <i class="fas fa-coins"></i> Points: <span id="dealerPoints">@ViewData["TotalPoints"]</span>
                                </span>
                            }
                            <span class="text-gray-700 text-sm">Hello, @Context.Session.GetString("name")</span>
                            <a asp-area="" asp-controller="Home" asp-action="Logout" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Home" asp-action="Login" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    }
                </div>
                <!-- Mobile menu button -->
                <div class="flex items-center sm:hidden">
                    <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-indigo-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile menu, show/hide based on menu state. -->
        <div class="sm:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                @if (Context.Session.GetString("UserName") != null)
                {
                    var userRole = Context.Session.GetString("role");
                    if (userRole == "Dealer")
                    {
                        <a asp-area="" asp-controller="Home" asp-action="DealerHome" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Dealer Dashboard
                        </a>
                    }
                    else if (userRole == "Admin")
                    {
                        <a asp-area="" asp-controller="Home" asp-action="AdminDashboard" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Admin Dashboard
                        </a>
                        <a asp-area="" asp-controller="Campaigns" asp-action="CreateCampaign" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Create Campaign
                        </a>
                        <a asp-area="" asp-controller="Campaigns" asp-action="ViewCampaigns" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            View Campaigns
                        </a>
                        <a asp-area="" asp-controller="Posters" asp-action="Upload" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Upload Poster
                        </a>
                        <a asp-area="" asp-controller="MaterialImages" asp-action="Upload" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Material Images
                        </a>
                        <a asp-area="" asp-controller="Products" asp-action="Index" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Products
                        </a>
                    }
                    else if (userRole == "Shopkeeper")
                    {
                        <a asp-area="" asp-controller="Home" asp-action="ShopkeeperHome" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                            Shopkeeper Dashboard
                        </a>
                    }
                    
                    @if (userRole == "Dealer")
                    {
                        <!-- Display total points for dealers in mobile view -->
                        <div class="px-3 py-2 text-sm text-gray-700 bg-yellow-100 rounded-md">
                            <i class="fas fa-coins"></i> Points: <span id="dealerPointsMobile">@ViewData["TotalPoints"]</span>
                        </div>
                    }
                    
                    <a asp-area="" asp-controller="Home" asp-action="Logout" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="Login" class="text-gray-700 hover:text-indigo-600 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                }
            </div>
        </div>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Display TempData messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Success! </strong>
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error! </strong>
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="py-6">
                <p class="text-center text-sm text-gray-500">
                    &copy; 2025 - Haldiram Promotional Management
                </p>
            </div>
        </div>
    </footer>
    
    <!-- Bottom Navigation -->
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }
    <nav class="bottom-nav">
        <a href="@Url.Action("ViewCampaigns", "Home")" class="nav-item @(currentAction == "ViewCampaigns" && currentController == "Home" ? "active" : "")">
            <i class="fas fa-bullhorn"></i>
            <span>Campaigns</span>
        </a>
        <a href="@Url.Action("Index", "Orders")" class="nav-item @(currentAction == "Index" && currentController == "Orders" ? "active" : "")">
            <i class="fas fa-shopping-bag"></i>
            <span>Orders</span>
        </a>
        <a href="@Url.Action("PointsDetails", "Home")" class="nav-item @(currentAction == "PointsDetails" && currentController == "Home" ? "active" : "")">
            <i class="fas fa-coins"></i>
            <span>Points</span>
        </a>
        <a href="@Url.Action("Vouchers", "Home")" class="nav-item @(currentAction == "Vouchers" && currentController == "Home" ? "active" : "")">
            <i class="fas fa-ticket-alt"></i>
            <span>Vouchers</span>
        </a>
        <a href="#" class="nav-item" onclick="alert('History feature coming soon')">
            <i class="fas fa-history"></i>
            <span>History</span>
        </a>
    </nav>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/notifications.js"></script>
    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.querySelector('[aria-controls="mobile-menu"]');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    const expanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
                    mobileMenuButton.setAttribute('aria-expanded', !expanded);
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>