@model HaldiramPromotionalApp.ViewModels.PosterViewModel
@using HaldiramPromotionalApp.Models

@{
    ViewData["Title"] = "Upload Poster";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Upload Form Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="bg-indigo-600 px-6 py-4">
                <h2 class="text-xl font-semibold text-white">Upload New Poster</h2>
            </div>
            <div class="p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="rounded-md bg-green-50 p-4 mb-6">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800">
                                    @TempData["SuccessMessage"]
                                </p>
                            </div>
                            <div class="ml-auto pl-3">
                                <div class="-mx-1.5 -my-1.5">
                                    <button type="button" class="inline-flex bg-green-50 rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-50 focus:ring-green-600">
                                        <span class="sr-only">Dismiss</span>
                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="rounded-md bg-red-50 p-4 mb-6">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-800">
                                    @TempData["ErrorMessage"]
                                </p>
                            </div>
                        </div>
                    </div>
                }

                <form asp-action="Upload" enctype="multipart/form-data" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()
                    
                    <div>
                        <label asp-for="ImageFile" class="block text-sm font-medium text-gray-700 mb-1">Poster Image</label>
                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="flex text-sm text-gray-600">
                                    <label asp-for="ImageFile" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                                        <span>Upload a file</span>
                                        <input asp-for="ImageFile" type="file" class="sr-only" accept=".jpg,.jpeg,.png,.gif" />
                                    </label>
                                    <p class="pl-1">or drag and drop</p>
                                </div>
                                <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                            </div>
                        </div>
                        <span asp-validation-for="ImageFile" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea asp-for="Message" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" rows="3" placeholder="Enter poster message"></textarea>
                        <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="ShowFrom" class="block text-sm font-medium text-gray-700 mb-1">Show From</label>
                            <input asp-for="ShowFrom" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" type="date" />
                            <span asp-validation-for="ShowFrom" class="text-red-500 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ShowUntil" class="block text-sm font-medium text-gray-700 mb-1">Show Until</label>
                            <input asp-for="ShowUntil" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" type="date" />
                            <span asp-validation-for="ShowUntil" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    
                    <div class="flex justify-end space-x-3">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            Upload Poster
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Uploaded Posters Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="bg-green-600 px-6 py-4">
                <h2 class="text-xl font-semibold text-white">Uploaded Posters</h2>
            </div>
            <div class="p-6">
                @{
                    var posters = ViewBag.Posters as List<Poster> ?? new List<Poster>();
                }
                
                @if (posters.Any())
                {
                    <div class="grid grid-cols-1 gap-4">
                        @foreach (var poster in posters)
                        {
                            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-200">
                                <div class="flex flex-col sm:flex-row">
                                    <div class="sm:w-1/3">
                                        <img src="@poster.ImagePath" alt="Poster Image" class="h-32 w-full object-cover">
                                    </div>
                                    <div class="sm:w-2/3 p-3">
                                        <h3 class="text-base font-medium text-gray-900 truncate">@poster.Message</h3>
                                        <div class="mt-1 text-xs text-gray-500">
                                            <p><span class="font-medium">From:</span> @poster.ShowFrom.ToString("dd/MM/yyyy HH:mm")</p>
                                            <p><span class="font-medium">To:</span> @poster.ShowUntil.ToString("dd/MM/yyyy HH:mm")</p>
                                            <p><span class="font-medium">Created:</span> @poster.CreatedAt.ToString("dd/MM/yyyy")</p>
                                        </div>
                                        <div class="mt-3 flex justify-end">
                                            <!-- Using a form instead of JavaScript for delete to ensureAntiForgeryToken works -->
                                            <form asp-action="Delete" asp-controller="Posters" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@poster.Id" />
                                                <button type="submit" class="inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" 
                                                        onclick="return confirm('Are you sure you want to delete this poster?');">
                                                    <svg class="-ml-0.5 mr-1 h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                    </svg>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <svg class="mx-auto h-10 w-10 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No posters uploaded</h3>
                        <p class="mt-1 text-xs text-gray-500">Get started by uploading a new poster.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}