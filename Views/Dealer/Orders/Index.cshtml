@model IEnumerable<HaldiramPromotionalApp.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <h2>Order History</h2>
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>User ID</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>@order.UserId</td>
                            <td>â‚¹@order.TotalAmount.ToString("F2")</td>
                            <td>
                                <span class="badge @(order.OrderStatus == "Completed" ? "bg-success" : order.OrderStatus == "Pending" ? "bg-warning" : "bg-info")">
                                    @order.OrderStatus
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-primary btn-sm">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No Orders Found</h4>
            <p>You haven't placed any orders yet.</p>
        </div>
    }
</div>