@model IEnumerable<HaldiramPromotionalApp.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container-fluid p-0">
    <div class="container mt-4">
        @if (Model.Any())
        {
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Your Orders</h2>
                <span class="badge bg-secondary">@Model.Count() orders</span>
            </div>

            <div class="row">
                @foreach (var order in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-0 shadow-sm rounded-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">Order #@order.Id</h5>
                                        <p class="text-muted small mb-0">@order.OrderDate.ToString("dd MMM yyyy HH:mm")</p>
                                    </div>
                                    <span class="badge @(order.OrderStatus == "Completed" ? "bg-success" : order.OrderStatus == "Pending" ? "bg-warning" : "bg-info")">
                                        @order.OrderStatus
                                    </span>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="mb-1"><strong>User:</strong> @order.UserId</p>
                                    <p class="mb-1"><strong>Total:</strong> â‚¹@order.TotalAmount.ToString("F2")</p>
                                </div>
                                
                                <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-primary w-100 rounded-0">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="alert alert-info rounded-0">
                    <h4 class="alert-heading">No Orders Found</h4>
                    <p>You haven't placed any orders yet.</p>
                    <hr>
                    <p class="mb-0">When you place orders, they will appear here.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .welcome-banner {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .card:hover {
        transform: translateY(-3px);
        transition: transform 0.2s ease-in-out;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .section-header {
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
    }
</style>