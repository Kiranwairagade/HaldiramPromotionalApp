@model HaldiramPromotionalApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2>Order Details</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>Order #@Model.Id</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Order Information</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Order Date:</strong></td>
                            <td>@Model.OrderDate.ToString("dd MMM yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td><strong>Status:</strong></td>
                            <td>
                                <span class="badge @(Model.OrderStatus == "Completed" ? "bg-success" : Model.OrderStatus == "Pending" ? "bg-warning" : "bg-info")">
                                    @Model.OrderStatus
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Total Amount:</strong></td>
                            <td>₹@Model.TotalAmount.ToString("F2")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Customer Information</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>User ID:</strong></td>
                            <td>@Model.UserId</td>
                        </tr>
                        <!-- If you want to display user details, you would need to include the User navigation property in the query -->
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h4>Order Items</h4>
        </div>
        <div class="card-body">
            @if (Model.OrderItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Material?.Materialname</td>
                                    <td>₹@item.UnitPrice.ToString("F2")</td>
                                    <td>@item.Quantity</td>
                                    <td>₹@item.TotalPrice.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Grand Total:</th>
                                <th>₹@Model.TotalAmount.ToString("F2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>No items found in this order.</p>
                </div>
            }
        </div>
    </div>
    
    <div class="mt-3">
        <a href="@Url.Action("Index", "Orders")" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>