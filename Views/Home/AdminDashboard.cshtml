@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Admin Dashboard</h1>
        <p class="text-gray-600">Welcome, @Context.Session.GetString("name")! Manage your promotional campaigns and materials.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a asp-controller="Campaigns" asp-action="CreateCampaign" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 block">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-plus-circle"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Create Campaign</h3>
            <p class="text-gray-600">Set up new promotional campaigns for your products</p>
        </a>
        
        <a asp-controller="Campaigns" asp-action="ViewCampaigns" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 block">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-list"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">View Campaigns</h3>
            <p class="text-gray-600">See all active and past promotional campaigns</p>
        </a>
        
        <a asp-controller="Posters" asp-action="Upload" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 block">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-image"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Upload Posters</h3>
            <p class="text-gray-600">Add promotional posters for campaigns and events</p>
        </a>
        
        <a asp-controller="MaterialImages" asp-action="Upload" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 block">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-camera"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Material Images</h3>
            <p class="text-gray-600">Upload images for your product materials</p>
        </a>
        
        <a asp-controller="Products" asp-action="Index" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 block">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-box"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Products</h3>
            <p class="text-gray-600">Manage your product catalog and inventory</p>
        </a>
    </div>
</div>