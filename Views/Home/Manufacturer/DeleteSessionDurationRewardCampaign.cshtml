@model SessionDurationRewardCampaign

@{
    ViewData["Title"] = "Delete Session Duration Reward Campaign";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h1 class="text-lg font-medium text-gray-900">Delete Session Duration Reward Campaign</h1>
            <p class="mt-1 text-sm text-gray-500">Are you sure you want to delete this campaign?</p>
        </div>

        <div class="p-4 sm:p-6">
            <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700">
                            <strong>Warning:</strong> This action cannot be undone. This will permanently delete the campaign and remove all associated data.
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-md font-medium text-gray-900 mb-4">Campaign Details</h3>
                        <dl class="grid grid-cols-1 gap-4">
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Campaign Name</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.CampaignName</dd>
                            </div>
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Start Date</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
                            </div>
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">End Date</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
                            </div>
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Session Duration</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.SessionDuration minutes</dd>
                            </div>
                        </dl>
                    </div>
                    <div>
                        <h3 class="text-md font-medium text-gray-900 mb-4">Reward Details</h3>
                        <dl class="grid grid-cols-1 gap-4">
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Voucher Value</dt>
                                <dd class="mt-1 text-sm text-gray-900">â‚¹@Model.VoucherValue</dd>
                            </div>
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Voucher Validity</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.VoucherValidity days</dd>
                            </div>
                            <div class="border-b border-gray-100 pb-3">
                                <dt class="text-sm font-medium text-gray-500">Status</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    @if (Model.IsActive)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">Inactive</span>
                                    }
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-6">
                        <h3 class="text-md font-medium text-gray-900 mb-2">Description</h3>
                        <p class="text-sm text-gray-900 bg-gray-50 p-3 rounded-md">@Model.Description</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-6">
                        <h3 class="text-md font-medium text-gray-900 mb-2">Campaign Image</h3>
                        <div class="mt-2">
                            <img src="@Model.ImagePath" alt="@Model.CampaignName" class="w-full max-w-md h-48 object-cover rounded-md" onerror="this.style.display='none'" />
                        </div>
                    </div>
                }
            </div>

            <div class="flex justify-end space-x-3">
                <a href="@Url.Action("ViewCampaigns", "Campaigns")" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Cancel
                </a>
                <form asp-action="DeleteSessionDurationRewardCampaign" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        Delete Campaign
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>