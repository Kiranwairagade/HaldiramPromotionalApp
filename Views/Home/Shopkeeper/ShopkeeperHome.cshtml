                            <div class="col-md-6">
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="info-content">
                                        <div class="info-label">Name</div>
                                        <div class="info-value">@Model.Shopkeeper.Name</div>
                                    </div>
                                </div>
