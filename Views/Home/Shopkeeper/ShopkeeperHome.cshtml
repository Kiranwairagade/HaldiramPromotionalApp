                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-2"> <!-- Reduced margin -->
                                        <label for="ProductName" class="form-label">Product Name</label>
                                        <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-2"> <!-- Reduced margin -->
                                        <label for="Quantity" class="form-label">Quantity</label>
                                        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" min="1" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-2"> <!-- Reduced margin -->
                                <label for="ProductDescription" class="form-label">Product Description</label>
                                <textarea class="form-control" id="ProductDescription" name="ProductDescription" rows="2">@Model.ProductDescription</textarea> <!-- Reduced rows -->
                            </div>
                            <div class="form-group mb-2"> <!-- Reduced margin -->
                                <label for="ProductPrice" class="form-label">Product Price (₹)</label>
                                <input type="number" class="form-control" id="ProductPrice" name="ProductPrice" value="@Model.ProductPrice" step="0.01" min="0" required>
                            </div>
                            <div class="d-flex gap-1"> <!-- Reduced gap -->
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i>Save Product Details <!-- Reduced margin -->
                                </button>
                                <a href="@Url.Action("ShopkeeperHome", "Home")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Cancel <!-- Reduced margin -->
