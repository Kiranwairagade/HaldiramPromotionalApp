        </div>
    </div>

    <!-- Hidden anti-forgery token for AJAX posts -->
    <form id="antiForgeryForm" style="display:none">@Html.AntiForgeryToken()</form>

    <!-- Tab Content -->
    <div class="tab-content" id="shopkeeperTabContent">
        <!-- Voucher Redemption Section -->
        <div class="tab-pane fade show active" id="voucher-redemption" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-ticket-alt"></i> Voucher Redemption</h5>
                </div>
                <div class="card-body">
