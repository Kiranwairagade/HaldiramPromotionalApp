                                        <button id="scanAgain" type="button" class="btn btn-outline-secondary">
                                            <i class="fas fa-redo me-1"></i>Scan Again
                                        </button>
                                    </div>
                                </div>

                                <div class="w-100 mt-4" style="max-width:640px;">
                                    <div class="manual-entry">
                                        <h6>Manual Voucher Entry</h6>
                                        <form asp-action="RedeemVoucher" method="post">
                                            <div class="form-group mb-2">
                                                <label for="voucherCode" class="form-label">Voucher Code</label>
                                                <input type="text" class="form-control" id="voucherCode" name="voucherCode" placeholder="Enter voucher code">
