        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="shopkeeper-info-tab" data-bs-toggle="tab" data-bs-target="#shopkeeper-information" type="button" role="tab">
                <i class="fas fa-store me-1"></i>Shopkeeper Information <!-- Reduced margin -->
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="redemption-history-tab" data-bs-toggle="tab" data-bs-target="#redemption-history" type="button" role="tab">
                <i class="fas fa-history me-1"></i>Redemption History <!-- Reduced margin -->
            </button>
        </li>
    </ul>

