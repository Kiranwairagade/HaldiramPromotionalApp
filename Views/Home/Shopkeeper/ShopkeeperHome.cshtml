@section Scripts {
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        // Remove page alerts after 5 seconds (plain JS)
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(el) { el.remove(); });
        }, 5000);

        // QR Code Scanner
        let html5QrCode = null;
        const startCameraButton = document.getElementById('startCamera');
        const stopCameraButton = document.getElementById('stopCamera');
        const scannerContainer = document.getElementById('scannerContainer');
        const scannerPlaceholder = document.getElementById('scannerPlaceholder');
        const scanResult = document.getElementById('scanResult');
        const scannedData = document.getElementById('scannedData');
        const redeemVoucherButton = document.getElementById('redeemVoucher');
        const scanAgainButton = document.getElementById('scanAgain');
        const scanMessages = document.getElementById('scanMessages');
        let lastScannedData = null;
        let autoRedeemTimeout = null;

        function showMessage(type, message, timeoutMs) {
            // type: 'success'|'danger'|'info'|'warning'
            if (!scanMessages) return;
            scanMessages.innerHTML = '';
            const wrapper = document.createElement('div');
            wrapper.className = 'alert alert-' + type + ' alert-dismissible fade show';
            wrapper.role = 'alert';
            wrapper.innerHTML = message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
            scanMessages.appendChild(wrapper);
            if (timeoutMs) {
                setTimeout(() => { wrapper.remove(); }, timeoutMs);
            }
        }

        function getAntiForgeryToken() {
            const input = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
            return input ? input.value : null;
        }

        startCameraButton && startCameraButton.addEventListener('click', function (e) {
            e.preventDefault();
            // Show scanner container and hide placeholder
            scannerContainer.style.display = 'block';
            scannerPlaceholder.style.display = 'none';
            startCameraButton.style.display = 'none';
            stopCameraButton.style.display = 'inline-block';

            // Clear previous scan data
            lastScannedData = null;
            scannedData.textContent = '';
            scanResult.style.display = 'none';
            scanMessages.innerHTML = '';

            try {
                if (html5QrCode === null) {
                    html5QrCode = new Html5Qrcode('qrVideo');
                }

                const config = { fps: 10, qrbox: { width: 250, height: 250 } };

                html5QrCode.start(
                    { facingMode: 'environment' },
                    config,
                    (decodedText, decodedResult) => {
                        if (lastScannedData !== decodedText) {
                            lastScannedData = decodedText;
                            scannedData.textContent = decodedText;
                            scanResult.style.display = 'block';
                            showMessage('info', '<strong>Scanned:</strong> ' + decodedText + ' — attempting redemption...');

                            // Auto redeem after short delay (user can cancel by clicking Scan Again)
                            if (autoRedeemTimeout) clearTimeout(autoRedeemTimeout);
                            autoRedeemTimeout = setTimeout(() => { redeemFromScan(); }, 800);
                        }
                    },
                    (errorMessage) => {
                        // silent
                    }
                ).catch(err => {
                    console.error('Unable to start scanning:', err);
                    showMessage('danger', 'Camera access denied or not available. Check camera permissions.');
                    stopCamera();
                });
            } catch (error) {
                console.error('Error initializing QR scanner:', error);
                showMessage('danger', 'Error initializing camera.');
                stopCamera();
            }
        });

        stopCameraButton && stopCameraButton.addEventListener('click', function (e) {
            e.preventDefault();
            stopCamera();
        });

        scanAgainButton && scanAgainButton.addEventListener('click', function (e) {
            e.preventDefault();
            // Cancel auto redeem if pending
            if (autoRedeemTimeout) { clearTimeout(autoRedeemTimeout); autoRedeemTimeout = null; }
            scanResult.style.display = 'none';
            scannedData.textContent = '';
            lastScannedData = null;
            scanMessages.innerHTML = '';
        });

        redeemVoucherButton && redeemVoucherButton.addEventListener('click', function (e) {
            e.preventDefault();
            if (lastScannedData) redeemFromScan();
        });

        function redeemFromScan() {
            if (!lastScannedData) return;
            const token = getAntiForgeryToken();
            if (!token) {
                showMessage('danger', 'Missing anti-forgery token. Cannot redeem.');
                return;
            }

            showMessage('info', 'Redeeming voucher, please wait...');

            fetch('@Url.Action("RedeemVoucherByQR", "Home")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ qrData: lastScannedData })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.requiresProductDetails) {
                        // redirect to product form
                        window.location.href = '@Url.Action("ShopkeeperHome", "Home")' + '?showProductForm=true&voucherId=' + data.voucherId;
                        return;
                    }
                    showMessage('success', 'Voucher redeemed successfully.', 4000);
                    stopCamera();
                    scanResult.style.display = 'none';
                    lastScannedData = null;
                } else {
                    showMessage('danger', 'Error redeeming voucher: ' + (data.message || 'Unknown error.'), 6000);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('danger', 'An error occurred while redeeming the voucher.');
            });
        }

        function stopCamera() {
            if (html5QrCode) {
                html5QrCode.stop().then(() => {
                    console.log('Camera stopped successfully');
                }).catch(err => {
                    console.error('Error stopping camera:', err);
                }).finally(() => {
                    resetCameraUI();
                });
            } else {
                resetCameraUI();
            }
        }

        function resetCameraUI() {
            scannerContainer.style.display = 'none';
            scannerPlaceholder.style.display = 'block';
            startCameraButton.style.display = 'inline-block';
            stopCameraButton.style.display = 'none';
            html5QrCode = null;
            if (autoRedeemTimeout) { clearTimeout(autoRedeemTimeout); autoRedeemTimeout = null; }
        }

        window.addEventListener('beforeunload', function () {
            if (html5QrCode) {
                html5QrCode.stop().catch(err => { console.error('Error stopping camera on page unload:', err); });
            }
        });
    </script>
