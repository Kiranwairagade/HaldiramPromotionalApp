@section Scripts {
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
        
        // QR Code Scanner
        let html5QrCode = null;
        const startCameraButton = document.getElementById('startCamera');
        const stopCameraButton = document.getElementById('stopCamera');
        const scannerContainer = document.getElementById('scannerContainer');
        const scannerPlaceholder = document.getElementById('scannerPlaceholder');
        const scanResult = document.getElementById('scanResult');
        const scannedData = document.getElementById('scannedData');
        const redeemVoucherButton = document.getElementById('redeemVoucher');
        const scanAgainButton = document.getElementById('scanAgain');
        let lastScannedData = null;
        
        startCameraButton.addEventListener('click', function() {
            // Show scanner container and hide placeholder
            scannerContainer.style.display = 'block';
            scannerPlaceholder.style.display = 'none';
            startCameraButton.style.display = 'none';
            stopCameraButton.style.display = 'inline-block';
            
            // Clear any previous scan data
            lastScannedData = null;
            scannedData.textContent = '';
            scanResult.style.display = 'none';
            
            // Initialize the QR code scanner
            try {
                // Create new instance if not exists
                if (html5QrCode === null) {
                    html5QrCode = new Html5Qrcode("qrVideo");
                    console.log("QR code scanner initialized");
                }
                
                const config = {
                    fps: 10,
                    qrbox: { width: 200, height: 200 } // Reduced size
                };
                
                // Start scanning
                html5QrCode.start(
                    { facingMode: "environment" }, // Use rear camera
                    config,
                    (decodedText, decodedResult) => {
                        // When QR code is scanned successfully
                        if (lastScannedData !== decodedText) {
                            console.log("QR Code detected:", decodedText);
                            lastScannedData = decodedText;
                            scannedData.textContent = decodedText;
                            scanResult.style.display = 'block';
                            // Don't hide the camera view immediately, let user decide
                        }
                    },
                    (errorMessage) => {
                        // This is normal - scanning attempts that don't find QR codes
                        // Only log to console, don't show alerts
                        // console.log(`QR scanning attempt: ${errorMessage}`);
                    }
                ).catch(err => {
                    console.error(`Unable to start scanning: ${err}`);
                    alert("Camera access denied or not available. Please check your camera permissions and ensure you're using HTTPS (if required by your browser).");
                    stopCamera();
                });
            } catch (error) {
                console.error("Error initializing QR scanner:", error);
                alert("Error initializing camera. Please check your camera permissions and try again.");
                stopCamera();
            }
        });
        
        stopCameraButton.addEventListener('click', function() {
            stopCamera();
        });
        
        scanAgainButton.addEventListener('click', function() {
            scanResult.style.display = 'none';
            // Keep scanner running but hide result
        });
        
        redeemVoucherButton.addEventListener('click', function() {
            if (lastScannedData) {
                // Send scanned data to server for redemption
                fetch('@Url.Action("RedeemVoucherByQR", "Home")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ qrData: lastScannedData })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.requiresProductDetails) {
                            // Redirect to shopkeeper home with product form
                            window.location.href = '@Url.Action("ShopkeeperHome", "Home")' + '?showProductForm=true&voucherId=' + data.voucherId;
                        } else {
                            alert("Voucher redeemed successfully!");
                            // Stop camera and reset UI
                            stopCamera();
                            scanResult.style.display = 'none';
                            scannerPlaceholder.style.display = 'block';
                            lastScannedData = null;
                            scannedData.textContent = '';
                        }
                    } else {
                        alert("Error redeeming voucher: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("An error occurred while redeeming the voucher.");
                });
            }
        });
        
        function stopCamera() {
            if (html5QrCode) {
                html5QrCode.stop().then(ignore => {
                    // QR Code scanning is stopped.
                    console.log("Camera stopped successfully");
                }).catch(err => {
                    // Stop failed, handle it.
                    console.error("Error stopping camera:", err);
                }).finally(() => {
                    // Reset UI regardless of whether stop succeeded
                    resetCameraUI();
                });
            } else {
                // Reset UI if no scanner instance
                resetCameraUI();
            }
        }
        
        function resetCameraUI() {
            scannerContainer.style.display = 'none';
            scannerPlaceholder.style.display = 'block';
            startCameraButton.style.display = 'inline-block';
            stopCameraButton.style.display = 'none';
            html5QrCode = null; // Reset the scanner instance
        }
        
        // Handle page unload to stop camera
        window.addEventListener('beforeunload', function() {
            if (html5QrCode) {
                html5QrCode.stop().catch(err => {
                    console.error("Error stopping camera on page unload:", err);
                });
            }
        });
    </script>
