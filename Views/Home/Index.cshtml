@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-6">Welcome to Haldiram Promotional Management</h1>
    @if (Context.Session.GetString("UserName") != null)
    {
        var userRole = Context.Session.GetString("role");
        if (userRole == "Dealer")
        {
            <div class="mb-8 p-4 bg-blue-100 text-blue-700 rounded-lg max-w-2xl mx-auto">
                <p>Hello, @Context.Session.GetString("name")! You are logged in as a Dealer.</p>
                <a href="@Url.Action("DealerHome", "Home")" class="mt-2 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Go to Dealer Dashboard</a>
            </div>
        }
        else if (userRole == "Admin")
        {
            <div class="mb-8 p-4 bg-green-100 text-green-700 rounded-lg max-w-2xl mx-auto">
                <p>Hello, @Context.Session.GetString("name")! You are logged in as an Administrator.</p>
            </div>
        }
    }
    else
    {
        <div class="mb-8 p-4 bg-yellow-100 text-yellow-700 rounded-lg max-w-2xl mx-auto">
            <p>Please <a href="@Url.Action("Login", "Home")" class="font-medium text-yellow-800 hover:underline">log in</a> to access the system.</p>
        </div>
    }
    
    @if (Context.Session.GetString("UserName") == null || Context.Session.GetString("role") != "Dealer")
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
            @if (Context.Session.GetString("UserName") != null && Context.Session.GetString("role") == "Admin")
            {
                <a asp-controller="Campaigns" asp-action="CreateCampaign" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Create Campaign</h3>
                    <p class="text-gray-600">Set up new promotional campaigns for your products</p>
                </a>
                
                <a asp-controller="Campaigns" asp-action="ViewCampaigns" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-list"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">View Campaigns</h3>
                    <p class="text-gray-600">See all active and past promotional campaigns</p>
                </a>
                
                <a asp-controller="Posters" asp-action="Upload" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-image"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Upload Posters</h3>
                    <p class="text-gray-600">Add promotional posters for campaigns and events</p>
                </a>
                
                <a asp-controller="MaterialImages" asp-action="Upload" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-camera"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Material Images</h3>
                    <p class="text-gray-600">Upload images for your product materials</p>
                </a>
                
                <a asp-controller="Products" asp-action="Index" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-box"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Products</h3>
                    <p class="text-gray-600">Manage your product catalog and inventory</p>
                </a>
            }
            else if (Context.Session.GetString("UserName") == null)
            {
                <a asp-controller="Home" asp-action="Login" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="text-indigo-600 text-3xl mb-3">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Login</h3>
                    <p class="text-gray-600">Sign in to access the promotional management system</p>
                </a>
            }
        </div>
    }
    
    @if (ViewBag.Message != null)
    {
        <div class="mt-8 p-4 bg-green-100 text-green-700 rounded-lg max-w-2xl mx-auto">
            @ViewBag.Message
        </div>
    }
    
   
</div>