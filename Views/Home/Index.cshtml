@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <div class="mb-8 p-4 bg-yellow-100 text-yellow-700 rounded-lg max-w-2xl mx-auto">
        <p>Please 
            <a href="@Url.Action("Login", "Home")" 
               class="font-medium text-yellow-800 hover:underline">
               log in
            </a> 
            to access the system.
        </p>
    </div>

    <div class="grid grid-cols-1 max-w-xs mx-auto">
        <a asp-controller="Home" 
           asp-action="Login" 
           class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="text-indigo-600 text-3xl mb-3">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Login</h3>
            <p class="text-gray-600">Sign in to access the promotional management system</p>
        </a>
    </div>

</div>
