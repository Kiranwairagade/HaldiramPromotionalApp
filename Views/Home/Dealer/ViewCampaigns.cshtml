@model ViewCampaignsViewModel
@{
    ViewData["Title"] = "Campaigns";
}

<style>
    /* Custom styles for sharp edges (no border-radius) */
    .card, .btn, .badge, .form-control {
        border-radius: 0 !important;
    }
    
    .campaign-image {
        width: 100%;
        height: 120px;
        margin-bottom: 0.75rem;
        border-radius: 0 !important;
        overflow: hidden;
    }

    .campaign-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .campaign-card {
        background-color: #ffffff;
        border-radius: 0 !important;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        border: 1px solid #e5e7eb;
        padding: 1rem;
        transition: box-shadow 0.2s ease;
    }
    
    .campaign-card:hover {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    
    .section-header {
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }
    
    .section-header svg {
        width: 1.25rem;
        height: 1.25rem;
        margin-right: 0.5rem;
    }
    
    /* Compact container */
    .compact-container {
        max-width: 1200px;
        margin: 1rem auto;
        padding: 0 10px;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .compact-container {
            max-width: 100%;
            padding: 0 5px;
        }
        
        .grid {
            grid-template-columns: 1fr !important;
        }
        
        .campaign-card {
            padding: 0.75rem;
        }
    }
</style>

