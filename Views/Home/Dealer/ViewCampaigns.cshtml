<script>
    function toggleDetails(id) {
        var detailsDiv = document.getElementById(id);
        var button = document.querySelector('[data-target="' + id + '"]');
        var icon = button.querySelector('.toggle-icon');
        var text = button.querySelector('.btn-text');
        
        if (!detailsDiv) return;
        
        var isHidden = detailsDiv.style.display === 'none' || window.getComputedStyle(detailsDiv).display === 'none';
        
        if (isHidden) {
            detailsDiv.style.display = 'block';
            icon.classList.remove('fa-chevron-down');
            icon.classList.add('fa-chevron-up');
            text.textContent = 'Hide Details';
        } else {
            detailsDiv.style.display = 'none';
            icon.classList.remove('fa-chevron-up');
            icon.classList.add('fa-chevron-down');
            text.textContent = 'Show Details';
        }
    }
    
    // Initialize all details as hidden
    document.addEventListener('DOMContentLoaded', function() {
        var detailsElements = document.querySelectorAll('.campaign-details-content');
        detailsElements.forEach(function(element) {
            element.style.display = 'none';
        });
    });
</script>