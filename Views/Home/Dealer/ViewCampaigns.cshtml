                                    else
                                    {
                                        <div class="campaign-image-placeholder">
                                            <i class="fas fa-image text-gray-400 text-2xl"></i>
                                        </div>
                                    }
                                    <div class="campaign-status-badge @(campaign.IsActive ? "active" : "inactive")">
                                        @(campaign.IsActive ? "Active" : "Inactive")
                                    </div>
                                </div>
                                
                                <!-- Campaign Title -->
                                <div class="campaign-title">@campaign.CampaignName</div>
                                
                                <!-- Dates in one row -->
                                <div class="campaign-dates">
                                    <span class="date-item">
                                        <i class="fas fa-calendar-start"></i>
                                        <span>Starts on: @campaign.StartDate.ToString("dd/MM/yyyy")</span>
                                    </span>
                                    <span class="date-item">
                                        <i class="fas fa-calendar-end"></i>
                                        <span>Ends on: @campaign.EndDate.ToString("dd/MM/yyyy")</span>
                                    </span>
                                </div>
                                
                                <!-- Toggle Details Button -->
                                <button type="button" class="toggle-details-btn" onclick="toggleDetails('pointsToCash-@campaign.Id')" 
                                        data-target="pointsToCash-@campaign.Id">
                                    <span class="btn-text">Show Details</span>
                                    <i class="fas fa-chevron-down toggle-icon"></i>
                                </button>
                                
                                <!-- Details Content -->
                                <div id="pointsToCash-@campaign.Id" class="campaign-details-content">
                                    <div class="campaign-detail-item">
                                        <div class="detail-label">Threshold</div>
                                        <div class="detail-value">@campaign.VoucherGenerationThreshold points</div>
                                    </div>
                                    <div class="campaign-detail-item">
                                        <div class="detail-label">Voucher Value</div>
                                        <div class="detail-value">₹@campaign.VoucherValue</div>
                                    </div>
                                    
