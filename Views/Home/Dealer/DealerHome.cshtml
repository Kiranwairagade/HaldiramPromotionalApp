    <script>
        // Pass materials data to JavaScript
        const materialsData = @Html.Raw(Json.Serialize(Model.Materials));
        const materialImagesData = @Html.Raw(Json.Serialize(Model.MaterialImages));
        
        // Debug: Log the structure of materialsData to console
        console.log('Materials Data:', materialsData);
        console.log('Material Images Data:', materialImagesData);
        
        // Cart functionality
        let cart = [];
        
        function changeQuantity(button, change, materialId) {
            const input = button.parentElement.querySelector('.quantity-input');
            let value = parseInt(input.value) + change;
            if (value < 1) value = 1;
            input.value = value;
        }
        
        function updateQuantity(input) {
            let value = parseInt(input.value);
            if (isNaN(value) || value < 1) value = 1;
            input.value = value;
        }
        
        // New function to update item quantity in the recent order section
        function updateItemQuantity(input, materialId) {
            let value = parseInt(input.value);
            if (isNaN(value) || value < 1) value = 1;
            input.value = value;
        }
        
        // New function to update cart item with specified quantity
        function updateCartItem(materialId, button) {
            const input = button.parentElement.querySelector('.quantity-input');
            const quantity = parseInt(input.value) || 1;
            
            // Find the material in the materialsData array
            const material = materialsData.find(m => m.Id == materialId);
            
            if (material) {
                // Check if item already exists in cart
                const existingItemIndex = cart.findIndex(item => item.materialId == materialId);
                
                if (existingItemIndex > -1) {
                    // Update quantity if item exists
                    cart[existingItemIndex].quantity = quantity;
                } else {
                    // Add new item to cart
                    cart.push({
                        sku: material.material3partycode,
                        name: material.Materialname,
                        price: material.dealerprice,
                        quantity: quantity,
                        materialId: materialId
                    });
                }
                
                updateCartDisplay();
                
                // Show feedback
                const originalText = button.textContent;
                button.textContent = 'Updated!';
                button.style.background = 'var(--success)';
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.background = '';
                }, 1000);
            }
        }
        
        function addToCart(button, sku, name, price, materialId) {
            const existingItem = cart.find(item => item.sku === sku);
            const quantityInput = button.parentElement.querySelector('.quantity-input');
            const itemQuantity = parseInt(quantityInput.value);
            
            if (existingItem) {
                existingItem.quantity += itemQuantity;
            } else {
                cart.push({
                    sku: sku,
                    name: name,
                    price: price,
                    quantity: itemQuantity,
                    materialId: materialId
                });
            }
            
            updateCartDisplay();
            quantityInput.value = 1; // Reset quantity input
            
            // Show feedback
            const originalText = button.textContent;
            button.textContent = 'Added!';
            button.style.background = 'var(--success)';
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = '';
            }, 1000);
        }
        
        function updateCartDisplay() {
            const cartItems = document.getElementById('cartItems');
            const cartCount = document.getElementById('cartCount');
            const cartTotal = document.getElementById('cartTotal');
            
            // Update cart count
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartCount.textContent = totalItems;
            
            // Update cart items
            if (cart.length === 0) {
                cartItems.innerHTML = '<p style="text-align: center; color: var(--gray-500); padding: 2rem;">Your cart is empty</p>';
                cartTotal.textContent = 'â‚¹0.00';
                return;
            }
            
            let itemsHtml = '';
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                itemsHtml += `
                    <div class="cart-item">
                        <div class="cart-item-image">
                            <img src="https://placehold.co/60x60/cccccc/000000?text=Product" alt="${item.name}">
                        </div>
                        <div class="cart-item-details">
                            <h4 class="cart-item-name">${item.name}</h4>
                            <p class="cart-item-price">â‚¹${item.price} Ã— ${item.quantity}</p>
                            <div class="cart-item-actions">
                                <span class="cart-item-quantity">Qty: ${item.quantity}</span>
                                <button class="remove-item" onclick="removeFromCart('${item.sku}')">Remove</button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            cartItems.innerHTML = itemsHtml;
            cartTotal.textContent = `â‚¹${total.toFixed(2)}`;
        }
        
        function removeFromCart(sku) {
            cart = cart.filter(item => item.sku !== sku);
            updateCartDisplay();
        }
        
        function toggleCart() {
            const cartContainer = document.getElementById('cartContainer');
            const cartOverlay = document.getElementById('cartOverlay');
            
            if (cartContainer.classList.contains('open')) {
                cartContainer.classList.remove('open');
                cartOverlay.classList.remove('open');
            } else {
                cartContainer.classList.add('open');
                cartOverlay.classList.add('open');
            }
        }
        
        // Simplified checkout function that uses logged-in user's information
        function checkout() {
            if (cart.length === 0) {
                alert('Your cart is empty!');
                return;
            }
            
            // Confirm order placement
            if (confirm('Place order with your saved information?')) {
                placeOrder();
            }
        }
        
        // Direct order placement function that takes order data
        async function placeOrderDirect(orderData) {
            // Check if order data is valid
            if (!orderData || !orderData.items || orderData.items.length === 0) {
                alert('Order request is invalid or empty');
                return;
            }
            
            try {
                const response = await fetch('/Orders/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(orderData)
                });
                
                // Check if response is JSON
                const contentType = response.headers.get('content-type');
                if (contentType && contentType.indexOf('application/json') !== -1) {
                    const result = await response.json();
                    
                    if (response.ok) {
                        alert(`Order placed successfully! Order ID: ${result.OrderId}`);
                        // Clear cart
                        cart = [];
                        updateCartDisplay();
                    } else {
                        alert('Error placing order: ' + (result.Message || 'Unknown error'));
                    }
                } else {
                    // Handle non-JSON response (likely an error page)
                    const text = await response.text();
                    console.error('Non-JSON response:', text);
                    alert('Error placing order. Server returned: ' + text);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error placing order. Please try again.');
            }
        }
        
