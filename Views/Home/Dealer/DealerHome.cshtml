        async function placeOrder() {
            // Prepare order data using minimal required fields
            // In a real application, the server would get the user info from the session
            const orderData = {
                // Customer information will be retrieved from the logged-in user on the server side
                items: cart.map(item => ({
                    // Use the actual material ID from the item data
                    MaterialId: item.materialId || 1, // Fallback to 1 if not set
                    Quantity: item.quantity,
                    Price: item.price
                }))
            };
            
            try {
                const response = await fetch('/Orders/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(orderData)
                });
                
                // Check if response is JSON
                const contentType = response.headers.get('content-type');
                if (contentType && contentType.indexOf('application/json') !== -1) {
                    const result = await response.json();
                    
                    if (response.ok) {
                        alert(`Order placed successfully! Order ID: ${result.OrderId}`);
                        // Clear cart
                        cart = [];
                        updateCartDisplay();
                    } else {
                        alert('Error placing order: ' + (result.Message || 'Unknown error'));
                    }
                } else {
                    // Handle non-JSON response (likely an error page)
                    const text = await response.text();
                    console.error('Non-JSON response:', text);
                    alert('Error placing order. Server returned: ' + text);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error placing order. Please try again.');
            }
        }
        
        // Reorder function to add all items from a previous order to the cart
        function reorder(orderId) {
            if (confirm('Add all items from this order to your cart?')) {
                fetch('/Orders/GetOrderDetails/' + orderId)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Order not found');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Clear current cart
                        cart = [];
                        
                        // Add each item from the order to the cart
                        data.orderItems.forEach(item => {
                            cart.push({
                                sku: item.material.material3partycode,
                                name: item.material.materialname,
                                price: item.unitPrice,
                                quantity: item.quantity,
                                materialId: item.materialId
                            });
                        });
                        
                        // Update cart display
                        updateCartDisplay();
                        
                        // Show success message
                        alert('Previous order items added to cart!');
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error loading order details: ' + error.message);
                    });
            }
        }
        
        // Reorder function that uses the updated quantities from the recent order section
        function reorderWithUpdatedQuantities() {
            // Get all product cards in the recent order section
            const productCards = document.querySelectorAll('.recent-order-container .product-card');
            
            // Check if there are any products to reorder
            if (productCards.length === 0) {
                alert('No items found to reorder!');
                return;
            }
            
            // Clear current cart
            cart = [];
            
            // Add each item with its updated quantity to the cart
            productCards.forEach(card => {
                const materialId = parseInt(card.getAttribute('data-material-id'));
                const quantityInput = card.querySelector('.quantity-input');
                const quantity = parseInt(quantityInput.value) || 1;
                
                // Find the material in the materialsData array
                const material = materialsData.find(m => m.Id == materialId);
                
                if (material) {
                    cart.push({
                        sku: material.material3partycode,
                        name: material.Materialname,
                        price: material.dealerprice,
                        quantity: quantity,
                        materialId: materialId
                    });
                }
            });
            
            // Debug: Log the cart contents
            console.log('Cart contents:', cart);
            
            // Check if cart has items before placing order
            if (cart.length === 0) {
                alert('No items found to reorder!');
                return;
            }
            
            if (confirm('Place order with the updated quantities?')) {
                // Prepare order data using the same structure as placeOrder function
                const orderData = {
                    items: cart.map(item => ({
                        MaterialId: item.materialId,
                        Quantity: item.quantity,
                        Price: item.price
                    }))
                };
                
                // Debug: Log the order data
                console.log('Order data being sent:', orderData);
                
                // Place the order with the updated quantities
                placeOrderDirect(orderData);
            }
        }
        
