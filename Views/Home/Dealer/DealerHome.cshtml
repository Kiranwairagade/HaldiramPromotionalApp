                            </div>
                            <button class="add-to-cart-btn" onclick="addToCart(this, '${material.material3partycode}', '${material.Materialname}', ${material.dealerprice}, ${material.Id})">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                `;
            });
            
            // Update the category products grid
            document.getElementById('categoryProductsGrid').innerHTML = productsHtml;
            
            // Hide the all products section and show the category products section
            document.getElementById('allProductsSection').style.display = 'none';
            document.getElementById('categoryProductsSection').style.display = 'block';
        }
        
