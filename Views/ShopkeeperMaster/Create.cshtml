@model HaldiramPromotionalApp.ViewModels.ShopkeeperMasterViewModel

@{
    ViewData["Title"] = "Create Shopkeeper";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-200 sm:px-6">
            <h1 class="text-lg font-medium text-gray-900">Create Shopkeeper</h1>
            <p class="mt-1 text-xs text-gray-500">Fill in the details for the new shopkeeper</p>
        </div>

        <div class="p-4 sm:p-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Name" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="StoreLocation" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="StoreLocation" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="StoreLocation" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="StoreType" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <select asp-for="StoreType" asp-items="@(new SelectList(Model.StoreTypes))" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
                            <option value="">Select Store Type</option>
                        </select>
                        <span asp-validation-for="StoreType" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Username" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Username" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Username" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Password" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="PhoneNumber" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end space-x-2">
                    <a asp-action="Index" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="py-2 px-4 border border-transparent rounded-md shadow-sm text-xs font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-blue-500">
                        Create Shopkeeper
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}