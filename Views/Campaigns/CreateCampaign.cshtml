@{
    ViewData["Title"] = "Create Campaign";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-200 sm:px-6">
            <h1 class="text-lg font-medium text-gray-900">Create New Campaign</h1>
            <p class="mt-1 text-xs text-gray-500">Select a campaign type to get started</p>
        </div>

        <div class="p-4 sm:p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <!-- POINTS_TO_CASH Card -->
                <form asp-action="SelectCampaign" method="post" class="bg-white rounded-md shadow-sm border border-gray-200 hover:border-indigo-300 transition duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer">
                    <input type="hidden" name="campaignType" value="POINTS_TO_CASH" />
                    <button type="submit" class="w-full text-left p-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-green-50 mb-3">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Points to Cash</h3>
                        <p class="text-gray-600 text-xs mb-3">Points convert to money to redeem any product/service</p>
                    </button>
                </form>

                <!-- POINTS_REWARD Card -->
                <form asp-action="SelectCampaign" method="post" class="bg-white rounded-md shadow-sm border border-gray-200 hover:border-indigo-300 transition duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer">
                    <input type="hidden" name="campaignType" value="POINTS_REWARD" />
                    <button type="submit" class="w-full text-left p-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-50 mb-3">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                            </svg>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Points Reward</h3>
                        <p class="text-gray-600 text-xs mb-3">Points redeemable for a specific product/service</p>
                    </button>
                </form>

                <!-- FREE_PRODUCT Card -->
                <form asp-action="SelectCampaign" method="post" class="bg-white rounded-md shadow-sm border border-gray-200 hover:border-indigo-300 transition duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer">
                    <input type="hidden" name="campaignType" value="FREE_PRODUCT" />
                    <button type="submit" class="w-full text-left p-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-purple-50 mb-3">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Free Product</h3>
                        <p class="text-gray-600 text-xs mb-3">Free item given on material ordered</p>
                    </button>
                </form>

                <!-- AMOUNT_REACH_GOAL Card -->
                <form asp-action="SelectCampaign" method="post" class="bg-white rounded-md shadow-sm border border-gray-200 hover:border-indigo-300 transition duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer">
                    <input type="hidden" name="campaignType" value="AMOUNT_REACH_GOAL" />
                    <button type="submit" class="w-full text-left p-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-yellow-50 mb-3">
                            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Amount Reach Goal</h3>
                        <p class="text-gray-600 text-xs mb-3">Reward on reaching target purchase amount</p>
                    </button>
                </form>

                <!-- SESSION_DURATION_REWARD Card -->
                <form asp-action="SelectCampaign" method="post" class="bg-white rounded-md shadow-sm border border-gray-200 hover:border-indigo-300 transition duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer">
                    <input type="hidden" name="campaignType" value="SESSION_DURATION_REWARD" />
                    <button type="submit" class="w-full text-left p-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-red-50 mb-3">
                            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Session Duration Reward</h3>
                        <p class="text-gray-600 text-xs mb-3">Reward based on reaching target session duration</p>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>