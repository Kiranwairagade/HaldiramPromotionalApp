                        {
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                                <div class="flex justify-between items-start">
                                    <h3 class="text-sm font-semibold text-gray-900">@campaign.CampaignName</h3>
                                    @if (campaign.IsActive)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">Inactive</span>
                                    }
                                </div>
                                <div class="mt-2 space-y-1">
                                    <div class="flex justify-between text-xs">
                                        <span class="text-gray-500">Start Date:</span>
                                        <span class="text-gray-900">@campaign.StartDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="flex justify-between text-xs">
                                        <span class="text-gray-500">End Date:</span>
                                        <span class="text-gray-900">@campaign.EndDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="flex justify-between text-xs">
                                        <span class="text-gray-500">Validity:</span>
                                        <span class="text-gray-900">@campaign.VoucherValidity days</span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="button" class="text-xs text-indigo-600 hover:text-indigo-900 font-medium" onclick="showDetails('pointsToCash-@campaign.Id')">
                                        Show All Details
                                    </button>
                                </div>
                                <div id="pointsToCash-@campaign.Id" class="mt-2 text-xs text-gray-600 hidden">
                                    <div class="pt-2 border-t border-gray-100">
                                        <div class="space-y-1">
                                            <div class="flex justify-between">
                                                <span class="text-gray-500">ID:</span>
                                                <span class="text-gray-900">@campaign.Id</span>
                                            </div>
                                            <div class="flex justify-between">
                                                <span class="text-gray-500">Campaign Name:</span>
