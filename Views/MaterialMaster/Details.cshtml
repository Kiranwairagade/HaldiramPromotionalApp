@model HaldiramPromotionalApp.Models.MaterialMaster

@{
    ViewData["Title"] = "Material Details";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-800">Material Details</h1>
            <p class="mt-1 text-sm text-gray-500">View the details of this material</p>
        </div>

        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.ShortName)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.ShortName)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Materialname)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Materialname)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Unit)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Unit)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Category)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.subcategory)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.subcategory)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.sequence)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.sequence)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.segementname)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.segementname)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.material3partycode)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.material3partycode)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.price)</dt>
                    <dd class="mt-1 text-sm text-gray-900">₹@Html.DisplayFor(model => model.price)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.isactive)</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @if (Model.isactive)
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                Inactive
                            </span>
                        }
                    </dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.CratesTypes)</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CratesTypes)</dd>
                </div>
                
                <div class="border-b border-gray-100 py-3">
                    <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.dealerprice)</dt>
                    <dd class="mt-1 text-sm text-gray-900">₹@Html.DisplayFor(model => model.dealerprice)</dd>
                </div>
            </dl>
            
            <div class="mt-8 flex justify-end space-x-3">
                <a asp-action="Index" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Edit Material
                </a>
            </div>
        </div>
    </div>
</div>