@model HaldiramPromotionalApp.Models.MaterialMaster

@{
    ViewData["Title"] = "Create Material";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-200 sm:px-6">
            <h1 class="text-lg font-medium text-gray-900">Create Material</h1>
            <p class="mt-1 text-xs text-gray-500">Fill in the details for the new material</p>
        </div>

        <div class="p-4 sm:p-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="ShortName" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="ShortName" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="ShortName" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Materialname" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Materialname" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Materialname" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Unit" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Unit" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Unit" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Category" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Category" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="Category" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="subcategory" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="subcategory" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="subcategory" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="sequence" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="sequence" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="sequence" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="segementname" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="segementname" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="segementname" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="material3partycode" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="material3partycode" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="material3partycode" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="price" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="price" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="price" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="CratesTypes" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="CratesTypes" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="CratesTypes" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="dealerprice" class="block text-xs font-medium text-gray-700 mb-1"></label>
                        <input asp-for="dealerprice" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" />
                        <span asp-validation-for="dealerprice" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div class="flex items-center">
                        <div class="flex items-center h-4">
                            <input asp-for="isactive" class="focus:ring-blue-500 h-3.5 w-3.5 text-blue-600 border-gray-300 rounded" />
                        </div>
                        <div class="ml-2 text-xs">
                            <label asp-for="isactive" class="font-medium text-gray-700"></label>
                        </div>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end space-x-2">
                    <a asp-action="Index" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="py-2 px-4 border border-transparent rounded-md shadow-sm text-xs font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-blue-500">
                        Create Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}